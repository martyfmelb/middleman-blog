<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Middleman" %></title>

    <% css_theme = current_page.data.css_theme || 'default' %>
    <%= stylesheet_link_tag 'bundles/site/' + css_theme + '.css' %>

    <% current_page.data.css && current_page.data.css.each do |css| %>
      <%= stylesheet_link_tag css %>
    <% end %>

    <%= javascript_include_tag 'bundles/site.js' %>

    <% current_page.data.head_js && current_page.data.head_js.each do |js| %>
      <%= javascript_include_tag js %>
    <% end %>
  </head>

  <body class="<%= page_classes %>">
    <div class="c-page">
      <div class="c-page__header">
        <div class="o-outer-container">
          Header
        </div>
      </div>
      <div class="c-page__body">
        <div class="o-outer-container">
          <%= yield %>
        </div>
      </div>
      <div class="c-page__footer">
        <div class="o-outer-container">
          Copyright &copy; 2016 Defensive Entity. All rights reserved.
        </div>
      </div>
    </div>
    <% current_page.data.js && current_page.data.js.each do |js| %>
      <div class="o-outer-container">
        <%= javascript_include_tag js %>
      </div>
    <% end %>
  </body>
</html>
